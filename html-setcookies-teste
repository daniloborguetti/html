<script>
(function() {
    var cookieName = "NomedoseuCookie"; // Nome do seu Cookie
    var cookieValue = "valor_padrao"; // Ajuste o valor do cookie conforme necessário
    var expirationTime = 2592000; // Um mês em segundos (30 dias)
    expirationTime = expirationTime * 1000; // Converte para milissegundos

    // Cria a data de expiração
    var date = new Date();
    date.setTime(date.getTime() + expirationTime);
    var expires = "expires=" + date.toUTCString();

    // Defina o domínio, removendo 'www' se presente
    var domain = location.hostname.replace(/^www\./i, "");
    if (!domain) {
        domain = "seu-dominio.com"; // Ajuste manual, se necessário
    }

    // Definir o cookie com SameSite=None, Secure, e domínio para todos os subdomínios
    document.cookie = cookieName + "=" + cookieValue + "; " + expires + "; path=/; domain=." + domain + "; SameSite=None; Secure";

    // Verifica se o cookie foi definido corretamente
    console.log("Cookie definido: ", document.cookie);
})();
</script>
